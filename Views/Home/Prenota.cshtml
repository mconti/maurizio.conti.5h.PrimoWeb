@model maurizio.conti._5h.PrimoWeb.Models.GuestResponse

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
        <title>Prenota</title>
    </head>

    <body> 
        <h5 class="bg-primary text-white text-center m-2 p-2">Modulo di prenotazione</h5>
        <form asp-action="Prenota" method="post" class="m-2">
            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Nome">Il tuo nome:</label>
                <input asp-for="Nome" class="form-control"  />
            </div>

            <div class="form-group">
                <label asp-for="Email">La tua Email:</label>
                <input asp-for="Email" class="form-control"  />
            </div> 

            <div class="form-group">
                <label asp-for="Telefono">Il tuo numero di telefono:</label>
                <input asp-for="Telefono" class="form-control"  />
            </div>

            <div class="form-group">
                <label>Pensi di venire?</label>
                <select asp-for="Partecipo" class="form-control" >
                    <option value="">Scegli un'opzione</option>
                    <option value="true">Si, verrò!</option>
                    <option value="false">No, non riesco a venire</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Prenota!</button>
        </form>    
    </body>
</html>